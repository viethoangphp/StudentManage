
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@using StudentManage.Models;
@model EmailSettingsModel
<!-- Page Content -->
<div class="content container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form id="edit_config" method="post" action="/Settings/Save">
                <h4 class="page-title m-t-30">Email Settings</h4>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email Username</label>
                            <input class="form-control" type="text" name="EmailUser" value="@Model.EmailUser">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email Password</label>
                            <input class="form-control" type="password" name="EmailPass" value="@Model.EmailPass">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email Title</label>
                            <input class="form-control" type="text" name="EmailTitle" value="@Model.EmailTitle">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email Subject</label>
                            <input class="form-control" type="text" name="EmailSubject" value="@Model.EmailSubject">
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    <button type="submit" class="btn btn-primary submit-btn">Save &amp; update</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /Page Content -->

@section js{
    @if (TempData["MESSAGE"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                toastr.info("@TempData["MESSAGE"]", "Thông báo");
                sound("/Assets/mp3/smallbox.mp3");
            })
        </script>
    }
    @if (TempData["ERROR"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                toastr.error("@TempData["ERROR"]", "Lỗi");
                sound("/Assets/mp3/error.mp3");
            })
        </script>
    }
}