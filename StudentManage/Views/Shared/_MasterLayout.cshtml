@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>HUTECH | SINH VIÊN</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/img/logo-hutech.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Assets/css/bootstrap.min.css">

    <!-- default icons used in the plugin are from Bootstrap 5.x icon library (which can be enabled by loading CSS below) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css"
          crossorigin="anonymous" />

    <!-- the fileinput plugin styling CSS file -->
    <link href="~/Assets/css/fileinput.css"
          media="all"
          rel="stylesheet"
          type="text/css" />

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/Assets/css/font-awesome.min.css">

    <!-- Lineawesome CSS -->
    <link rel="stylesheet" href="~/Assets/css/line-awesome.min.css">

    <!-- Select2 CSS -->
    <link rel="stylesheet" href="~/Assets/css/select2.min.css">
    <link rel="stylesheet" href="~/Assets/css/fileinput.css">
    <!-- Datatable CSS -->
    <link rel="stylesheet" href="~/Assets/css/dataTables.bootstrap4.min.css">

    <!-- Datetimepicker CSS -->
    <link rel="stylesheet" href="~/Assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="~/Assets/plugins/toastr/toastr.min.css" />
    <!-- Tagsinput CSS -->
    <link rel="stylesheet" href="~/Assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/Assets/css/style.css" />


</head>

<body>
    <!-- Main Wrapper -->
    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <!-- Loader -->
        <div id="loader-wrapper">
            <div id="loader">
                <div class="loader-hutech">
                    <svg class="spinner" width="100%" height="100%" viewBox="0 0 66 66"
                         xmlns="http://www.w3.org/2000/svg">
                        <circle class="path" fill="none" stroke-width="2" stroke-linecap="round" cx="33" cy="33" r="30">
                        </circle>
                    </svg>
                    <img class="logo-hutech-gif" width="50%" src="~/Assets/img/logo.gif" alt="Vui lòng chờ">
                </div>
            </div>
        </div>
        <!-- /Loader -->
        <!-- Header -->
        <div class="header">
            <!-- Logo -->
            <div class="header-left logo">
                <a href="/" class="logo">
                    <img src="~/Assets/img/logo-hutech.png" alt="">
                    <span class="m-l-5">SV-Hutech</span>
                </a>
            </div>
            <!-- /Logo -->

            <a id="toggle_btn" href="javascript:void(0);">
                <span class="bar-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
            </a>

            <!-- Header Title -->
            <div class="page-title-box">
                <h1></h1>
            </div>
            <!-- /Header Title -->

            <a id="mobile_btn" class="mobile_btn" href="#sidebar"><i class="fa fa-bars"></i></a>

            <!-- Header Menu -->
            <ul class="nav user-menu">
                <!-- Search -->
                @*<li class="nav-item">
                        <div class="top-nav-search">
                            <a href="javascript:void(0);" class="responsive-search">
                                <i class="fa fa-search"></i>
                            </a>
                            <form action="search.html">
                                <input class="form-control" type="text" placeholder="Search here">
                                <button class="btn" type="submit"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                    </li>*@
                <!-- /Search -->
                <!-- Notifications -->
                <!-- /Notifications -->
                <!-- Message Notifications -->
                @using Models.DAO
                @{
                    int id = (int)Session["USER_ID"];
                    var user = new UserDAO().GetUserByID(id);
                }
                <li class="nav-item dropdown has-arrow main-drop">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img src="~/Assets/img/logo-hutech.png" alt="">
                            <span class="status online"></span>
                        </span>
                        <span>@user.FullName</span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Profile">
                            <i class="la la-user"></i>
                            Thông tin cá nhân
                        </a>
                        @*<a class="dropdown-item" href="/Settings">
                                <i class="las la-cog"></i>
                                Cài đặt
                            </a>*@
                        <a class="dropdown-item text-danger" href="#" data-target="#logout" data-toggle="modal">
                            <i class="las la-sign-out-alt"></i>
                            Đăng xuất
                        </a>

                    </div>
                </li>
            </ul>
            <!-- /Header Menu -->
            <!-- Mobile Menu -->
            <div class="dropdown mobile-user-menu">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <i class="fa fa-ellipsis-v"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="/Profile">
                        <i class="la la-user"></i>
                        Thông tin cá nhân
                    </a>
                    @*<a class="dropdown-item" href="/Settings">
                            <i class="las la-cog"></i>
                            Cài đặt
                        </a>*@
                    <a class="dropdown-item text-danger" href="/Login/Logout">
                        <i class="las la-sign-out-alt"></i>
                        Đăng xuất
                    </a>
                </div>
            </div>
            <!-- /Mobile Menu -->

        </div>
        <!-- /Header -->
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <!-- Quản lý -->
                        <li class="menu-title">
                            <span>Danh mục</span>
                        </li>
                        <li class="submenu">
                            <a href="#">
                                <i class="la la-files-o"></i> <span> Quản lý sổ đoàn</span> <span class="menu-arrow"></span>
                            </a>
                            <ul style="display: none;">
                                <li>
                                    <a href="/Union">Danh sách Sổ Đoàn</a>
                                </li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#">
                                <i class="la la-users"></i> <span> Quản lý người dùng</span> <span class="menu-arrow"></span>
                            </a>
                            <ul style="display: none;">
                                <li>
                                    <a href="/User">Danh sách</a>
                                </li>
                                <li>
                                    <a href="/User/Role">Phân quyền</a>
                                </li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#">
                                <i class="la la-users"></i> <span> Quản lý khoa & lớp</span> <span class="menu-arrow"></span>
                            </a>
                            <ul style="display: none;">
                                <li>
                                    <a href="/Faculty">Danh sách khoa</a>
                                </li>
                                <li>
                                    <a href="/Class">Danh sách lớp</a>
                                </li>
                                <li>
                                    <a href="/Student">Danh sách sinh viên</a>
                                </li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#">
                                <i class="la la-users"></i><span>Quản Lý Đánh Giá </span> <span class="menu-arrow"></span>
                            </a>
                            <ul style="display: none;">
                                <li>
                                    <a href="/Evaluation/Detail">Thực Hiện Đánh Giá</a>
                                </li>
                                <li>
                                    <a href="/Evaluation/List">Danh Sách Đánh Giá</a>
                                </li>
                                <li>
                                    <a href="/Evaluation/">Điểm Cá Nhân</a>
                                </li>

                            </ul>
                        </li>
                        <li class="submenu">
                            <a href="#">
                                <i class="la la-users"></i><span>Quản Lý Chấm Điểm</span> <span class="menu-arrow"></span>
                            </a>
                            <ul style="display: none;">
                                <li>
                                    <a href="/UnionEvaluation/Union">Thực Hiện Đánh Giá</a>
                                </li>
                            </ul>
                        </li>
                        @if (user.PositionID == 4)
                        {
                            <li class="submenu">
                                <a href="#">
                                    <i class="la la-users"></i><span>Quản lý điểm lớp</span><span class="menu-arrow"></span>
                                </a>
                                <ul style="display: none;">
                                    <li>
                                        <a href="~/UnionEvaluation/ClassEvaluation/?ClassId=@user.ClassID">Đánh giá lớp</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (user.PositionID == 5)
                        {
                            <li class="submenu">
                                <a href="#">
                                    <i class="la la-users"></i><span>Quản lý điểm khoa</span><span class="menu-arrow"></span>
                                </a>
                                <ul style="display: none;">
                                    <li>
                                        <a href="~/UnionEvaluation/FacultyEvaluation/?FacultyId=@user.Class.FacutyID">Đánh giá khoa</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (user.PositionID == 6)
                        {
                            <li class="submenu">
                                <a href="#">
                                    <i class="la la-users"></i><span>Quản lý điểm trường</span><span class="menu-arrow"></span>
                                </a>
                                <ul style="display: none;">
                                    <li>
                                        <a href="~/UnionEvaluation/SchoolEvaluation">Đánh giá toàn trường</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="modal custom-modal fade" id="logout" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="form-header">
                            <h3>Đăng Xuất</h3>
                            <p>Bạn có muốn đăng xuất tài khoản khỏi hệ thống không?</p>
                        </div>
                        <div class="modal-btn delete-action">
                            <div class="row">
                                <div class="col-6">
                                    <a href="/Login/Logout" class="btn continue-btn">Đăng Xuất</a>
                                </div>
                                <div class="col-6">
                                    <a href="javascript:void(0);" data-dismiss="modal"
                                       class="btn cancel-btn">Hủy</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Sidebar -->
        <div class="page-wrapper">
            @RenderBody()
            @Html.Action("Footer", "Home")
        </div>

    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/Assets/js/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap Core JS -->
    <script src="~/Assets/js/popper.min.js"></script>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <!-- Slimscroll JS -->
    <script src="~/Assets/js/jquery.slimscroll.min.js"></script>
    <!-- Select2 JS -->
    <script src="~/Assets/js/select2.min.js"></script>
    <!-- Datetimepicker JS -->
    <script src="~/Assets/js/moment.min.js"></script>
    <script src="~/Assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Assets/plugins/toastr/toastr.min.js"></script>

    <!-- Tagsinput JS -->
    <script src="~/Assets/plugins/bootstrap-tagsinput/bootstrap-tagsinput.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Assets/js/app.js"></script>
    <script src="~/Assets/js/lib/sound.js"></script>
    <script src="~/Assets/js/lib/Notification.js"></script>
    <script src="~/Assets/js/fileinput.js"></script>
    <script src="~/Assets/js/fileinput2.js"></script>

    @RenderSection("js", false)
</body>

</html>
