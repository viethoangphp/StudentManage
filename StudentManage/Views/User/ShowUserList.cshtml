@using StudentManage.Models
@model List<UserModel>

@foreach (UserModel model in Model)
{
    <div class="col-md-4 col-sm-6 col-12 col-lg-4 col-xl-3">
        <div class="profile-widget">
            <div class="profile-img">
                <a href="user-profile.html" class="avatar">
                    <img src="~/Assets/img/logo-hutech.png"
                         alt="">
                </a>
            </div>
            <div class="dropdown profile-action">
                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown"
                   aria-expanded="false"><i class="material-icons">more_vert</i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item edit-user-action" href="#" data-toggle="modal"
                       data-target="#edit_employee" data-id="@(model.userID)"><i class="fa fa-pencil m-r-5"></i>Sửa</a>
                    <a class="dropdown-item delete-user-action" href="#" data-toggle="modal"
                       data-target="#delete_employee" data-id="@(model.userID)"><i class="fa fa-trash-o m-r-5"></i>Xóa</a>
                </div>
            </div>
            <h4 class="user-name m-t-10 mb-0 text-ellipsis"><a href="user-profile.html">@(model.fullname) </a></h4>
            <div class="small text-muted m-t-5">@(model.positionName)</div>
        </div>
    </div>
}
