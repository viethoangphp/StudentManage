@section js
{
    <script src="~/Assets/js/jquery.dataTables.min.js"></script>
    <script src="~/Assets/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $("#myTable").DataTable({
                searching: false,
                ordering: false,
                responsive: true,
                processing: true,
                columns: [
                    {
                        "render": function (data, type, full, meta) {
                            return '<strong>' + (meta.row + 1) + '</strong>';
                        },
                        "class": "text-center"
                    },
                    {
                        "data": "FacultyName"
                    },
                    {
                        "data": "Phone",
                        "render": function (data) {
                            if (data == null) {
                                return "Chưa cập nhật"
                            }
                            else {
                                return data
                            }
                        }
                    },
                    {
                        "data":"FacultyDone"
                    },
                    {
                        "data":"FacultyNotDone"
                    },
                    {
                        "data": "SchoolDone"
                    },
                    {
                        "data": "SchoolNotDone"
                    },
                    {
                        "data": "FacultyId",
                        "render": (data) => {
                            return '<a href="/UnionEvaluation/FacultyEvaluation/?FacultyId=' + data + '" title="Chấm điểm"> <i class="las la-pen text-xl text-success juged-icon"></i> </a>';
                           
                        }
                    }
                   
                ],
                ajax: {
                    url: "/UnionEvaluation/GetListFacultyEvaluation"
                }
            })
            $('#btn-search').on('click', () => {
                var FacultyId = $('#FacultyId').val();
                var FacultySituation = $('#FacultySituation').val();
                var SchoolSituation = $('#SchoolSituation').val();
                console.log(FacultyId + "/" + FacultySituation + "/" + SchoolSituation);
                table.ajax.url("/UnionEvaluation/SearchSchoolEvaluation/?FacultyId=" + FacultyId + "&FacultySituation=" + FacultySituation + "&SchoolSituation=" + SchoolSituation).load();
            })
        })
    </script>
